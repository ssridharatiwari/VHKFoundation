<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_cardview"
    android:orientation="vertical"
    android:padding="@dimen/dp_5"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_user_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/circle_profile_image"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_profile_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ll_user_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codunite Pvt. Ltd."
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"></TextView>

            <TextView
                android:id="@+id/tv_date_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 March 2024"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_12"></TextView>

            <TextView
                android:id="@+id/tv_desc_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's help the kid for better food"
                android:textColor="@color/gray"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_12"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_like_comments"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_like_select"></ImageView>

                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="100"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_12">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_comments_comments"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_chat"></ImageView>

                    <TextView
                        android:id="@+id/tv_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="100"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_12">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_share_comments"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_share_select"></ImageView>

                    <TextView
                        android:id="@+id/tv_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="100"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_comment_action"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_view">

        </ImageView>

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#E5E5E5">

    </View>

</LinearLayout>