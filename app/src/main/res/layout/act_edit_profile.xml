<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_form"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/lay_actionbar"
                    layout="@layout/include_actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_20" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_actionbar"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_white_cardview"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Your Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_email"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Your Name"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Your Email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_mail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Your Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Your Phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Your Phone"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Select State"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:background="@drawable/bg_edittext">

                            <Spinner
                                android:id="@+id/spinner_statelist"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/transparent"
                                android:paddingRight="@dimen/dp_25"
                                android:theme="@style/mySpinnerItemStyle" />

                            <ImageView
                                android:id="@+id/img_drop_1"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_5"
                                android:src="@drawable/ic_arrow_drop"
                                app:tint="@color/orange" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Select City"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:background="@drawable/bg_edittext">

                            <Spinner
                                android:id="@+id/spinner_citylist"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/transparent"
                                android:paddingRight="@dimen/dp_25"
                                android:theme="@style/mySpinnerItemStyle" />

                            <ImageView
                                android:id="@+id/img_drop_2"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_5"
                                android:src="@drawable/ic_arrow_drop"
                                app:tint="@color/orange" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Your Address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Your Address"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Pincode"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Pincode"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter Aadhar Card Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_aadhar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter Aadhar Card Number"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="Enter PAN Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/et_pan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edittext"
                            android:hint="Enter PAN Number"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="Document Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="Aadhar Front Image"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        ></TextView>

                    <ImageView
                        android:id="@+id/img_frontaadharcard"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_50"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nofile_aadharfront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="No file chosen"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13"
                            ></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/choose_aadharfront"
                                android:layout_width="120dp"
                                android:layout_height="@dimen/dp_35"
                                android:layout_marginLeft="20.0dip"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/bg_button"
                                android:text="Choose File"
                                android:textColor="@color/white" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/remove_aadharfront"
                                android:layout_width="120dp"
                                android:layout_height="@dimen/dp_35"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/bg_button"
                                android:text="Remove"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/documents_kyc"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13"
                            ></TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@color/light_orange" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="PAN Card Front Image"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"
                            ></TextView>

                        <ImageView
                            android:id="@+id/img_pancard"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_50"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nofile_pancard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:text="No file chosen"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_13"
                                ></TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/choose_pancard"
                                    android:layout_width="120dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_marginLeft="20.0dip"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="10.0dip"
                                    android:background="@drawable/bg_button"
                                    android:text="Choose File"
                                    android:textColor="@color/white" />


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/remove_pancard"
                                    android:layout_width="120dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="10.0dip"
                                    android:background="@drawable/bg_button"
                                    android:text="Remove"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="@dimen/dp_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/documents_kyc"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_13"
                                ></TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_45"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/bg_button"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_70"
                        android:paddingRight="@dimen/dp_70"
                        android:text="Update Now"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_20"></androidx.appcompat.widget.AppCompatTextView>


                        <TextView
                            android:id="@+id/tv_skip_now"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skip_now"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dp_30"
                            >

                        </TextView>

                </LinearLayout>

            </ScrollView>


            <include
                layout="@layout/include_connection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_20" />

        </RelativeLayout>

    </LinearLayout>
</layout>