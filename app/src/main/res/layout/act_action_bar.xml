<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/botton_radios"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:gravity="center">

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/menu_img"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_dash_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/ll_menu"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Codunite"
                android:textStyle="bold"
                android:padding="@dimen/dp_5"
                android:textColor="@color/chocolateColor"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>

   <!--     <LinearLayout
            android:id="@+id/lay_actions"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toStartOf="@+id/img_notification"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2">

        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/ll_create_post"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_notification"

            android:orientation="vertical"
            android:padding="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_create_post"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:contentDescription="@string/app_name"
                android:src="@drawable/add_post_img" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_notification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_user_image"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_30"
                android:contentDescription="@string/app_name"
                android:src="@drawable/notification_img2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_image"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/circle_profile_image"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_2">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_profile_image"
                app:civ_border_width="0dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
